<!-- BANNER -->
<%= render 'shared/universe_photo' %>

<div class="banner-bk-gray banner-height">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <h1 class="padded-top-lg"><%= @universe.name %> workshops</h1>
      </div>
    </div>
</div>


<div class="container">
  <% @jobs.each do |job| %>
    <h3 class="padded-lg" id="<%= job.name %>">
      <%= job.name %>
    </h3>
      <div class="row">
    <% job.workshops.each do |wksp| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card-index">
            <div class="card-img" >
            <!-- workshop_pic -->
                <%= cl_image_tag workshop_pic(wksp), height: 220, width: 358, crop: :fill %>
                <div class="col-xs-12 text-center craftman-name">
                  <p class="txt-mmd roboto white">
                    <%= wksp.craftman.first_name.capitalize %>
                  </p>
                  <p class="txt-mmd roboto white">
                    <%= wksp.craftman.last_name.capitalize %>
                  </p>
                </div>
            <div class="card-img-filter"></div>
            </div>
            <div class="card-block">
              <p class="card-title roboto txt-gras txt-md text-uppercase"><%= wksp.title %></p>
              <p class="roboto txt-description txt-light padded-bottom-m"><%= wksp.description[0..80] %>...</p>
              <div>
                <div class="row">
                  <div class="col-md-3">
                    <div class="upper-line"><hr></div>
                    <p class="roboto txt-description txt-light">Where</p>
                  </div>
                  <div class="col-md-9">
                    <div class="upper-line-left"><hr></div>
                    <p class="roboto txt-description txt-light"><%= wksp.craftman.locality %></p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-3">
                    <div class="upper-line"><hr></div>
                    <p class="roboto txt-description txt-light">Price</p>
                  </div>
                  <div class="col-md-9">
                    <div class="upper-line-left"><hr></div>
                    <p class="roboto txt-description txt-light"><%= wksp.price.to_i %>â‚¬/day</p>
                  </div>
                </div>
              </div>
              <div class="text-center card-index-button">
                <%= link_to "DETAILS", workshop_path(wksp), class: "txt-light btn btn-lg btn-black" %>
              </div>
            </div>
          </div>
        </div>
    <% end %>
      </div>
  <% end %>
</div>

<!-- TITLE -->
<% content_for(:title_tag) do %>
  DIWYH - Explore <%= @universe.name %> workshops
<% end %>

