        </div>
        <div class="col-xs-2 col-xs-offset-2">
          <%= image_tag @workshop.universe.artisan_hands.fullpath, height: 120, width: 120, crop: :fill %>
        </div>
      </div>
  </div>
</div>



  <!-- BUTTON -->
