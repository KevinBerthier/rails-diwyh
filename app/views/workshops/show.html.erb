    </div>
  </div>



  <!-- OTHER WORKSHOPS -->
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <div class="txt-heavy padded-lg">
        <h3>Other workshops with <%= @workshop.craftman.first_name %> <%= @workshop.craftman.last_name %></h3>
      </div>
    </div>
  </div>


<!-- Fin de container -->
</div>

