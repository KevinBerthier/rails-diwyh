<!-- BANNER -->
<%= render 'shared/universe_photo' %>


  <div class="banner-bk-gray banner-height">
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
          <h1 class="padded-top-lg"><%= @workshop.title %></h1>
        </div>
      </div>
  </div>


<!-- THE WORKSHOP -->
<div class="container-fluid">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <div class="color-line-title-wood text-left padded-top-md">
          <hr>
        </div>
        <h2>the</h2>
        <h2 class="padded-bottom-lg">workshop</h2>
      </div>
    </div>


  <div class="row">

    <!-- Tableau DETAILS workshop -->
    <div class="col-md-3 col-xs-offset-1">

      <!-- 1ère ligne ARTISAN -->
      <div class="row">
        <div class="col-sm-3">
          <div class="upper-line"><hr></div>
          <h6 class="txt-regular">Artisan</h6>
        </div>
        <div class="col-sm-9">
          <div class="upper-line-left"><hr></div>
          <h6 class="txt-light"><%= @workshop.craftman.first_name %> <%= @workshop.craftman.last_name %></h6>
        </div>
      </div>

      <!-- 2ème ligne / TECHNIQUES -->
      <div class="row">
        <div class="col-md-3">
          <div class="upper-line"><hr></div>
          <h6 class="txt-regular">Techniques you will learn</h6>
        </div>
        <div class="col-md-9">
          <div class="upper-line-left"><hr></div>
          <h6 class="txt-light">Morphology of wood, Recognize woods, Materials & tools, Different turning techniques.</h6>
        </div>
      </div>

      <!-- 3ème ligne / PRICE -->
      <div class="row">
        <div class="col-md-3">
          <div class="upper-line"><hr></div>
          <h6 class="txt-regular">Price</h6>
        </div>
        <div class="col-md-9">
          <div class="upper-line-left"><hr></div>
          <h6 class="txt-light">from <%= @workshop.price.to_i %> €/day</h6>
        </div>
      </div>

      <!-- Dernière ligne / WHERE -->
      <div class="row">
        <div class="col-md-3">
          <div class="upper-line"><hr></div>
          <h6 class="txt-regular">Where</h6>
          <div class="final-line"><hr></div>
        </div>
        <div class="col-md-9">
          <div class="upper-line-left"><hr></div>
          <h6 class="txt-light">address</h6>
          <div class="final-line-left"><hr></div>
        </div>
      </div>

      <!-- mini map -->
      <div class="padded-md">
        <div id="map" style="width: 290px; height: 290px;"></div>

        <% content_for(:after_js) do %>
          <script>
            $(document).ready(function() {
              var handler = Gmaps.build('Google');
              handler.buildMap({
                provider: {
                  styles: Diwyh.map_styles
                  // possibility to pass other gmap options here
                },
                internal: { id: 'map' } }, function() {
                markers = handler.addMarkers(<%= raw @hash.to_json %>);
                handler.bounds.extendWith(markers);
                handler.fitMapToBounds();
                if (markers.length == 0) {
                  handler.getMap().setZoom(2);
                } else if (markers.length == 1) {
                  handler.getMap().setZoom(14);
                }
              });
            });
          </script>
        <% end %>
      </div>

    <!-- Fin du tableau de détails -->
    </div>

      <!-- Description workshop -->
      <div class="col-md-6 col-xs-offset-1">
        <p><%= @workshop.description %></p>
      </div>

  </div>



  <!-- PHOTOS -->
  <div class="photos-group">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">

        <div class="row sm-gutter padded-top-xs">
          <div class="col-sm-12">
            <%= image_tag @workshop.universe.top_gallery.fullpath, height: 150, crop: :fill %>
          </div>
        </div>
        <div class="row sm-gutter padded-top-xs">
          <div class="col-sm-8">
            <%= image_tag @workshop.universe.middle_gallery.first.fullpath, height: 400, crop: :fill %>
          </div>
          <div class="col-sm-4">
            <%= image_tag @workshop.universe.middle_gallery.last.fullpath, height: 400, crop: :fill %>
          </div>
        </div>
        <div class="row sm-gutter padded-top-xs">
          <div class="col-sm-12 col-md-4">
            <%= image_tag @workshop.universe.gallery[0].fullpath %>
          </div>
          <div class="col-sm-12 col-md-4">
            <%= image_tag @workshop.universe.gallery[1].fullpath %>
          </div>
          <div class="col-sm-12 col-md-4">
            <%= image_tag @workshop.universe.gallery[2].fullpath %>
          </div>
        </div>

      </div>
    </div>
  </div>



  <!-- ARTISAN -->

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">

      <div class="color-line-title-wood text-left padded-top-md">
        <hr>
      </div>
