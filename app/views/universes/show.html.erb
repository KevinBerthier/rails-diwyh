<!-- BANNER -->
<%= render 'shared/universe_photo' %>

<div class="container-fuid">
  <!-- photo de la banner -->
  <div class="row">
    <div class="col-xs-12">
      <div class="banner-bk-gray position banner-height-lg">

        <div class="row">
          <div class="col-xs-12 col-xs-offset-2 col-sm-offset-2 col-md-6">
            <h1><%= @universe.name.upcase %></h1>
          </div>
          <div class="col-xs-12 col-xs-offset-2 col-md-6 col-md-offset-6">
            <h5>
            <!-- @universe.slug -->
              <%= @universe.description %>
            </h5>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-offset-3 col-lg-offset-3">
            <div class="details-photo universe">
              <!-- photo -->
              <%= image_tag @universe.banner_bottom.fullpath %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END -->

<!-- INSPIRATION PAR UNIVERSE (petit-text + photo) -->
<div class="container-fluid">
  <div class="row">

      <div class="col-xs-12 col-sm-offset-2 col-md-3 col-md-offset-2 ">
        <div class="universe-presentation margin-lg">
        <h4>
          <%= @universe.second_description %>
        </h4>
        </div>
      </div>
      <div class="col-xs-12 col-sm-offset-2 col-md-4 col-md-offset-2">
        <div class="universe <%= @universe.code %> border margin-lg">
          <%= image_tag @universe.middle_gallery.last.fullpath, height: 370, width: 300, gravity: :center, crop: :fit %>
        </div>
      </div>

  </div>
</div>
