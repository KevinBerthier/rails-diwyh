<div class="container-fluid">
  <div class="row">
    <div class="universe-desciption">
      <div class="col-xs-12 col-md-6 col-md-offset-2">
        <p class="text-left universe-text-top">
          <%= @universe.third_description %>
        </p>
      </div>
      <div class="col-xs-12 col-md-6 col-md-offset-5">
        <p class="text-left universe-text-bottom">
          <%= @universe.fourth_description %>
        </p>
      </div>
    </div>
  </div>
</div>

<!-- BUTTON BY UNIVERSE -->
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <div class="text-center universe <%= @universe.code %> button">
        <%= link_to "Explore our #{@universe.name.downcase} workshops", universe_workshops_path(@universe), class: "btn-wood"  %>
      </div>
    </div>
  </div>
</div>

<!-- JOBS -->
<div class="container-fluid">
  <div class="row">
    <div class="universe <%= @universe.code %> job padded">
      <div class="col-xs-11 col-xs-offset-1">
        <div class="universe <%= @universe.code %> surligned">
        </div>
        <h2><%= @universe.name %></h2>
        <h2 class="padding-left-xl">jobs</h2>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="jobs">
      <% @universe.jobs.each do |job| %>
        <div class="col-xs-12 col-sm-4">
          <!-- ajouter l'ancre -->
          <%= link_to universe_workshops_path(@universe, anchor: job.name) do  %>
            <div class="card-job">
              <%= image_tag job.image.fullpath, height: 370, width: 300, crop: :fill %>
              <h3 class="text-center">
                <%= job.name %>
              </h3>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- CRAFTMEN -->
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-11 col-xs-offset-1">
      <div class="universe <%= @universe.code %> job padded">
