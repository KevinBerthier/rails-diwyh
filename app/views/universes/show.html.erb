<!-- BANNER -->
<%# render 'shared/universe_photo' %>

<div class="container-fuid">
  <!-- photo de la banner -->
  <div class="row">
    <div class="col-xs-12">
      <div class="banner-bk-gray position banner-height-lg">

        <div class="row">
          <div class="col-8 col-xs-6">
            <h1 class="text-center"><%= @universe.name.upcase %></h1>
