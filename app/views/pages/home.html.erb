<div class="row">

    <ul class="grid cs-style-5">
      <% @universes.each do |universe| %>

        <li>
          <%= link_to universe_path(universe) do  %>
            <figure>
              <div>
                <%= cl_image_tag universe.banner.fullpath, height: 300, width: 480, crop: :crop %>
                <h2> <%= universe.name %> </h2>
              </div>
              <figcaption style="background-image: url('<%= cl_image_path universe.collage.path %>')";>
              </figcaption>
            </figure>
          <% end %>
        </li>

      <% end %>
    </ul>

</div>

<!-- map de ouf -->
<div id="map" style="width: 100%; height: 600px;"></div>

<% content_for(:after_js) do %>
  <script>
    $(document).ready(function() {

      var handler = Gmaps.build('Google');
      handler.buildMap({
        provider: {
          styles: Diwyh.map_styles
          // possibility to pass other gmap options here
        },
        internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  </script>
<% end %>
