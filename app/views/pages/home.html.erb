<br><br><br>



<div class="row">

    <ul class="grid cs-style-5">
      <% @universes.each do |universe| %>

        <li>
          <%= link_to universe_path(universe) do  %>
            <figure>
              <div>
                <%= cl_image_tag universe.banner.fullpath, height: 300, width: 480, crop: :crop %>
                <h2> <%= universe.name %> </h2>
              </div>
              <figcaption style="background-image: url('<%=image_path "background_stone.png"%>')";>
              </figcaption>
            </figure>
          <% end %>
        </li>

      <% end %>
    </ul>

</div>
