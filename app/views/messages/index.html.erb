<div class="container">
  <h2 class="text-center"><%= @workshop.title %> with <%= @workshop.craftman.first_name %> <%= @workshop.craftman.last_name %></h2>

  <%= link_to "<< dashboard", dashboard_path, class: "btn btn-default back-button" %>
  <div class="row">
    <div class="col-xs-12">
      <h3 class="text-center">Workshop: <%= @workshop.title %></h3>
    </div>
    <div class="chat_window col-xs-12 col-md-10 col-md-offset-1">
      <%= render "messages/messages" %>
      <div class="bottom_wrapper clearfix">
        <%= render 'messages/form', workshop: @workshop, message: @message %>
      </div>
    </div>
  </div>
</div>
