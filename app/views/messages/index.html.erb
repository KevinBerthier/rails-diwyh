<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3 class="text-center">Workshop: <%= @workshop.title %></h3>
    </div>
    <div class="chat_window col-xs-12 col-md-10 col-md-offset-1">
      <ul class="messages" id="messages">
        <% @messages.each do |message| %>
          <%= render "messages/show", message: message %>
        <% end %>
      </ul>
      <div class="bottom_wrapper clearfix">
        <%= render 'messages/form', workshop: @workshop, message: @message %>
      </div>
    </div>
  </div>
</div>

