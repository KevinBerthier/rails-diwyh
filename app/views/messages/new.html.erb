
<div class="padded-md">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="background-form chat_window">
          <h2 class="txt-bold text-center">Contact <%= @workshop.craftman.first_name %> <%= @workshop.craftman.last_name %></h2>
          <%= simple_form_for [@workshop, @message], url: workshop_create_first_message_path(@workshop, current_user) do |f| %>
            <%= f.error_notification %>
            <%= f.input :date_checkin, as: :string, input_html:{type: "date"}, label: "From" %>
            <%= f.input :date_checkout, as: :string, input_html:{type: "date"}, label: "To" %>
            <%= f.input :content, label: "Present yourself and what you want to learn with this experience"  %>

            <div class="text-center">
              <%= f.button :submit, "SEND", class: "btn btn-message" %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
