<div class="padded-md">
  <div class="container">

    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <h2 class="txt-bold text-center">Your Craftman Profile</h2>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="border-form form-height-width-lg" style="background-size: cover !important;background-image: url('<%= image_url "glass.jpg" %>');">
          <div class="background-form top-left-form border-color">
            <%= simple_form_for @craftman, url: craftmen_edit_profile_path do |f| %>
              <%= f.error_notification %>


            <%= f.input :first_name %>
            <%= f.input :last_name %>
            <%= f.input :address, placeholder: "Start typing your address", input_html: {id: "user_input_autocomplete_address"} %>
            <%= f.input :locality, input_html: {id: "locality"} %>
            <%= f.input :phone %>
            <%= f.input :job, collection: Job::JOBS, prompt: "Select your job" %>
            <%= f.input :birth_date %>
            <%= f.input :description %>
            <%= f.input :avatar, as: :attachinary %>


              <div class="form-actions text-center">
                <%= f.button :submit, "Update your profile" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

