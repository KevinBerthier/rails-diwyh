<!-- wrapper -->
<div class="wrapper">
  <!-- container texte and photo -->
  <div class="container">
    <div class="row">

      <div class="col-xs-12 col-md-6 padded-ri">
      <!-- colonne text -->
       <div class="">
       <!-- caracteristiques -->
        <h2 class="txt-md txt-heavy padded-md"><%= @booking.workshop.title %></h2>
        <div class="row">
           <div class="col-xs-6 col-md-6">
             <p class="txt-description">Craftman</p>
             <p class="txt-description">telephon</p>
             <p class="txt-description">Address</p>
           </div>
           <div class="col-xs-6 col-md-6">
             <p class="txt-description txt-bold"><%= @craftman.first_name + " " + @craftman.last_name %></p>
             <p class="txt-description txt-bold">
               <% if @craftman.phone != nil %>
                <%= @craftman.phone %>
               <% else %>
                <%= "-" %>
               <% end %>
             </p>
             <p class="txt-description txt-bold"><%= @craftman.address %></p>
           </div>
        </div>
        <hr style="height:1px;" />
       </div>

       <div class="">
        <!-- résa -->
        <h2 class="txt-md txt-heavy padded-md">Reservation dates</h2>
        <div class="row">
           <div class="col-xs-6 col-md-6">
             <p class="txt-sm">Start</p>
             <p class="txt-bold"><%= @booking.date_check_in %></p>
           </div>
           <div class="col-xs-6 col-md-6">
             <p class="txt-sm">End</p>
             <p class="txt-bold"><%= @booking.date_check_out %></p>
           </div>
        </div>
        <hr style="height:1px;" />
       </div>

       <div class="">
       <!-- prix -->
        <h2 class="txt-md txt-heavy padded-md">Price</h2>
        <div class="row">
           <div class="col-xs-6 col-md-6">
             <p class="txt-description">Total price</p>
             <p class="txt-description">Caution</p>
           </div>
           <div class="col-xs-6 col-md-6">
             <p class="txt-description txt-bold"><%= @booking.total_price  %> €</p>
             <p class="txt-description txt-bold"><%= @booking.total_price * 2  %> €</p>
           </div>
        </div>
        <hr style="height: 1px;" />
       </div>

      </div>

      <div class="col-xs-12 col-md-6">
      <!-- photo -->
       <div class="margin-top-photo text-center" id="image-boat" >
         <% if @booking.workshop.photos.empty? %>
           <%= image_tag("http://placehold.it/696x550") %>
         <% else %>
           <%= cl_image_tag @booking.workshop.photos.first.path, height: 696, width: 550, crop: :fill %>
         <% end %>
       </div>
      </div>

    </div>
  </div>

  <!-- container button -->
  <div class="container">
    <div class="row">

      <div class="col-xs-12 col-md-6 text-center">
       <div id="btn-conf-booking">
         <%= simple_form_for @booking, url: accept_booking_path(@booking) do |f| %>
         <%= f.input :date_check_in, as: :hidden %>
         <%= f.input :date_check_out, as: :hidden  %>
         <%= f.submit "ACCEPT", class: "btn btn-default " %>
         <% end %>
       </div>
      </div>

      <div class="col-xs-12 col-md-6 text-center">
        <div id="btn-conf-booking">
           <%= simple_form_for @booking, url: reject_booking_path(@booking) do |f| %>
           <%= f.input :date_check_in, as: :hidden %>
           <%= f.input :date_check_out, as: :hidden  %>
           <%= f.submit "REJECT", class: "btn btn-default " %>
           <% end %>
         </div>
      </div>

    </div>
  </div>

  <!-- personnal message  -->

</div>
